{
  "manifest_version": 3,
  "name": "Grepolis Automation",
  "version": "1.0",
  "permissions": [
    "tabs", "activeTab", "scripting", "alarms", "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Grepolis Automation"
  },
  "content_scripts": [
    {
      "matches": ["*://*.grepolis.com/*"],
      "js": ["FarmingAutomationContent.js"]
    }
  ],
  "host_permissions": [
    "*://*.grepolis.com/*"
  ]
}
